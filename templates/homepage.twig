{% extends 'layout.twig' %}

{% import 'macros.twig' as myMacros %}

{% block title 'Ini homepage' %}

{% block body %}

<div class="hero-unit">
    <h1>{{ pageData.title }}</h1>

    <p>{{ pageData.summary|raw }}</p>

    {% if pageData.hasSale %}
    <div class="sale-ends-at">
        Sale Ends: {{ saleEndsAt|date('D M jS ga') }}
    </div>
    {% endif %}
</div>

{{ include('_banner.twig') }}

<div class="row">
    {{ myMacros.printProducts(products,"Waahh... ga ono barange..") }}
</div>
<div class="row">
    {{ myMacros.printProducts(featuredProducts,"Waahh... ga ono..") }}
</div>

{% if products|length is even %}
    <div class="row">
        <span class="span12">
            ono barange dab!
        </span>
    </div>
{% endif %}

